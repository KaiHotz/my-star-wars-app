{
  "singleQuote": true,
  "bracketSpacing": true,
  "arrowParens": "always",
  "printWidth": 140,
  "tabWidth": 2,
  "quoteProps": "preserve",
  "trailingComma": "all",
  "overrides": [
    {
      "files": "*.jsx",
      "options": {
        "printWidth": 120
      }
    },
    {
      "files": "*.tsx",
      "options": {
        "printWidth": 120
      }
    }
  ]
}
